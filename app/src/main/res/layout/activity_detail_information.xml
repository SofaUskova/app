<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:id="@+id/scrollLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/d" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/i" />
            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/viewTwo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <GridLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:columnCount="2"
            android:rowCount="18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewTwo">

            <TextView
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="18sp"
                tools:text="Клюква" />

            <TextView
                android:id="@+id/price"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="18sp"
                tools:text="250 000р" />

            <View
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:background="#ECEFF1" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Год рождения"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/dateBirth"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="2010г.р." />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Пол"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gender"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Кобыла" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Порода"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/breed"
                android:layout_columnWeight="1"
                android:text="-"
                android:maxWidth="200dp"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Тракеddddddoooooooooodcccccccccccccccccccdddя" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Масть"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/color"
                android:maxWidth="200dp"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Соловая" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Отец"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/father"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Карнавал" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Мать"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/mother"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Балерина" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Высота в холке"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/height"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="173см" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Местоположение"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Орловкая обл, г. Орел" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Специализация"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/specialization"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Конкур" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Организация"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/organization"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="КСК Образцово" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Тавро"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/brand"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="34" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Отметины"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/marks"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Носок на левой задней ноге" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Документы"
                android:textColor="#90A4AE"
                android:textSize="12sp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/docType"
                android:layout_columnWeight="1"
                android:text="-"
                android:textColor="#263238"
                android:textSize="12sp"
                tools:text="Пасспорт лошади" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:background="#ECEFF1" />

            <TextView
                android:id="@+id/allInform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:textColor="#263238"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/allInformButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:textColor="#607D8B"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/text_read_next"
                tools:visibility="visible" />
        </GridLayout>

        <View
            android:id="@+id/viewSix"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF1"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageButtonShare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_share_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSix" />

        <TextView
            android:id="@+id/textShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поделиться"
            android:textColor="#263238"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonShare"
            app:layout_constraintStart_toStartOf="@+id/imageButtonShare"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonShare" />

        <ImageView
            android:id="@+id/imageButtonAddFavorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_favorite_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSix" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Избранное"
            android:textColor="#263238"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonAddFavorite"
            app:layout_constraintStart_toStartOf="@+id/imageButtonAddFavorite"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonAddFavorite" />

        <View
            android:id="@+id/viewFifty"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#ECEFF1"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageButtonProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kiany"
            app:layout_constraintBottom_toBottomOf="@+id/sellerLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sellerName" />

        <TextView
            android:id="@+id/sellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="26dp"
            android:text="Киану Ривз"
            android:textColor="#263238"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageButtonProfile"
            app:layout_constraintTop_toBottomOf="@+id/viewFifty" />

        <TextView
            android:id="@+id/sellerLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="КСК “Серебрянная подкова”"
            android:textColor="#263238"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/sellerName"
            app:layout_constraintTop_toBottomOf="@+id/sellerName" />

        <Button
            android:id="@+id/floatButtonTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="8dp"
            android:text="+7 919-209-09-82"
            android:textAllCaps="false"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            app:backgroundTint="#607D8B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sellerLocation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
