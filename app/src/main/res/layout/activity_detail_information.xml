<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/toolbar" />

            <View
                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#ECEFF1"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:scrollbars="none"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewOne">

                <LinearLayout
                    android:id="@+id/scrollLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="230dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/f" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="230dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/p" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="230dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/d" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="230dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/i" />
                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:id="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#ECEFF1"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/viewTwo">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Клюква"
                        android:textColor="#263238"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="250 000р"
                        android:textColor="#263238"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">

                    <View
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#ECEFF1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Год рождения"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="2010г.р."
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Пол"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Кобыла"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Порода"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Тракененская"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Масть"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Соловая"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Отец"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Карнавал"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Мать"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Балерина"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Высота в холке"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="173см"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Местоположение"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Орловкая обл, г. Орел"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Документы"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="ВНИИК"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Место рождения"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Орловкая обл, г. Орел"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="Специализация"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_weight="1"
                        android:text="Конкур"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                </TableRow>

            </TableLayout>

            <View
                android:id="@+id/viewHour"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#ECEFF1"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

            <TextView
                android:id="@+id/textFreeInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:text="Отличная кобыла, подходит как под опытного всадника, так и под начинающего. Свободно ходит маршруты 110-120см. Может ехать простые маршруты выездки, одиночные барьеры 130-140см. Никогда не смотрит на барьер ывааываываываываываывавыаываываываываыfdszzzz sd dfsdf sdf dfsdf  fd ff f sfsfs fsdf sf ffs  f f ваываываываыв конец"
                android:textColor="#263238"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewHour" />

            <TextView
                android:id="@+id/textFreeInformationOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:text="Читать далее..."
                android:textColor="#607D8B"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textFreeInformation" />

            <View
                android:id="@+id/viewFifty"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#ECEFF1"
                app:layout_constraintTop_toBottomOf="@+id/textFreeInformationOpen" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageButtonProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kiany"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="26dp"
                android:text="Киану Ривз"
                android:textColor="#263238"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageButtonProfile"
                app:layout_constraintTop_toBottomOf="@+id/viewFifty" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="КСК “Серебрянная подкова”"
                android:textColor="#263238"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <View
                android:id="@+id/viewSix"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#ECEFF1"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonProfile" />

            <ImageView
                android:id="@+id/imageButtonShare"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_share_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewSix" />

            <TextView
                android:id="@+id/textShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поделиться"
                android:textColor="#263238"
                app:layout_constraintEnd_toEndOf="@+id/imageButtonShare"
                app:layout_constraintStart_toStartOf="@+id/imageButtonShare"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonShare" />

            <ImageView
                android:id="@+id/imageButtonAddFavorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_favorite_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewSix" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Избранное"
                android:textColor="#263238"
                app:layout_constraintEnd_toEndOf="@+id/imageButtonAddFavorite"
                app:layout_constraintStart_toStartOf="@+id/imageButtonAddFavorite"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonAddFavorite" />

            <View
                android:id="@+id/viewSix1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#ECEFF1"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Похожие объявления"
                android:textColor="#607D8B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewSix1" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/f" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/p" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/d" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/i" />
                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/floatButtonTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="8-919-209-09-82"
        app:backgroundTint="#607D8B"
        android:textSize="16sp"
        app:iconSize="26dp"
        android:textAllCaps="false"
        android:textColor="#EEEEEE"
        app:icon="@drawable/ic_phone_white"
        app:iconTint="#EEEEEE" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
